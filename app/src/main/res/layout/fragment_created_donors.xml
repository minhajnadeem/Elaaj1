<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.minhajlib.elaaj1.FragmentCreatedDonors">

        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="search by name,blood group"
            android:background="@drawable/et_rounded_corners"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_search"
            android:layout_margin="8dp"
            android:padding="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_created_donors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="8dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/btn_add_new_donor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Donor"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_round_corner"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No match found"
        android:textColor="@color/white"
        android:padding="6dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:id="@+id/tv_match_not_found"/>
</FrameLayout>