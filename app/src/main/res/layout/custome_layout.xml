<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_blood_ic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="A+"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_donor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="72dp"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Donor name"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_donor_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_donor_name"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="72dp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Donor city"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_donor_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_donor_city"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="72dp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Address not given"/>

        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_star"
            android:gravity="center"
            android:padding="24dp"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/tv_last_donated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_donor_address"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="72dp"
            android:text="Last donation not given"/>

        <TextView
            android:id="@+id/tv_free_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_last_donated"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="72dp"
            android:text="Free or Paid"/>

        <TextView
            android:id="@+id/tv_org_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_free_paid"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="72dp"
            android:text="Organization name"/>

        <!--<ImageView
            android:id="@+id/iv_call_made"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_call_made_black_24px"
            android:text="Last Called"
            android:textSize="12sp"
            android:visibility="invisible"/>-->
        <TextView
            android:id="@+id/tv_last_called"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_outgoing_call"
            android:text="13/7"
            android:gravity="center"
            android:textSize="12sp"
            android:visibility="invisible"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>