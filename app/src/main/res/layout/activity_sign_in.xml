<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:background="@drawable/gradient_background"
    tools:context="com.example.minhajlib.elaaj1.SignInActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="64dp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="64dp"
        android:text="Welcome To Elaaj "
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/btn_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="32dp"
            android:drawableLeft="@drawable/ic_googleg_color_24dp"
            android:background="@color/white"
            android:elevation="15dp"
            android:paddingLeft="16dp"
            android:text="@string/signin_google"/>

        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_facebook_white_22dp"
            android:paddingLeft="16dp"
            android:text="Sign In With Facebook"/>

        <Button
            android:id="@+id/btn_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_google"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:paddingLeft="16dp"
            android:text="Sign In With Phone"/>
    </LinearLayout>

</RelativeLayout>